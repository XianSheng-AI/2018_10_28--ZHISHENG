$mainColor = #4c65fb
$bgColor = #f4f5f5
$wordColor = #71777c


//内容超出显示省略号
ellipsis()
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

//清除浮动
clearFix()
  //*zoom 1
  &::after
    content ''
    display block
    clear both
    //display: block;
    height: 0;
    //clear: both;
    visibility: hidden;
