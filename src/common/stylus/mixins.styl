$mainColor = #4c65fb
$bgColor = #f4f5f5
$wordColor = #71777c


//内容超出显示省略号
ellipsis()
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

//不选中文本
noSelectText()
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

//清除浮动
clearFix()
  //*zoom 1
  &::after
    content ''
    display block
    clear both
    height: 0;
    visibility: hidden;
